<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="testPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!-- MDR entities -->
        <class>eu.europa.ec.fisheries.uvms.domain.BaseEntity</class>
		<class>eu.europa.ec.fisheries.mdr.domain.MdrConfiguration</class>
		<class>eu.europa.ec.fisheries.mdr.domain.MdrCodeListStatus</class>
		<class>eu.europa.ec.fisheries.mdr.domain.AcronymVersion</class>

		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FishPackaging</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FaoSpecies</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxFaReportType</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.GearType</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FishSizeClass</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.VesselActivity</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.Rfmo</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxGpParty</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxGpResponse</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.GfcmStatisticalRectangles</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FaoAreaCodes</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxContactRole</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.EffortZone</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxGpValidationLevel</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.WeightMeans</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxProcessType</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxUnit</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxFaFmc</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.Territory</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxLocationType</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxGpValidationType</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FishPresentation</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxGpPurpose</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxFaType</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.IcesStatisticalRectangles</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.GfcmGsa</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FluxLocationCharacteristic</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.Location</class>
		<class>eu.europa.ec.fisheries.mdr.domain.codelists.FishFreshness</class>

		<properties>
			<property name="hibernate.default_schema"                          value="mdr" />
			<property name="javax.persistence.schema-generation.create-source" value="metadata" />

            <property name="javax.persistence.schema-generation.database.action"       value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.action"        value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.create-target" value="target/scripts/create-table.ddl" />
            <property name="javax.persistence.schema-generation.scripts.drop-target"   value="target/scripts/drop-table.ddl"/>

			<property name="hibernate.connection.url"
					  value="jdbc:h2:mem:testdb;INIT=CREATE SCHEMA IF NOT EXISTS mdr;DATABASE_TO_UPPER=false;TRACE_LEVEL_SYSTEM_OUT=2;MVCC=true;" />
			<property name="javax.persistence.schema-generation.create-database-schemas" value="true" />
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.dialect"                 value="org.hibernate.dialect.HSQLDialect"/>
			<property name="hibernate.connection.username"     value="sa" />
			<property name="hibernate.connection.password"     value="" />

			<!--HIBERNATE SEARCH PROPS-->
			<property name="hibernate.search.default.directory_provider"  value="org.hibernate.search.store.impl.RAMDirectoryProvider"/>
			<property name="hibernate.search.default.indexBase"           value="target/lucene/index/mdr"/>
			<property name="hibernate.hbm2ddl.auto"                       value="create"/>

        </properties>
    </persistence-unit>
</persistence>